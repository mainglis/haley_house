<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
            <!-- <li class="nav-header">Navigate</li> -->
              <!-- <li class="active"><a href="#">Export Link</a></li> -->
              <li><%= link_to t('.back', :default => t("helpers.links.back_to_search")),
              individuals_path, :class => 'btn-small'  %></li>
        </ul>
      </div><!--/.well sidebar-nav -->
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
    
            <li class="nav-header">Jump to...</li>
              <!-- <li class="active"><a href="#">Export Link</a></li> -->
              <li><a href="#">Contact Information</a></li>
              <li><a href="#">Mission</a></li> <!--Type of person, event_attendance_records, donation_records-->
              <li><a href="#">Funders</a></li> <!--Thank yous, invites to events, do they get eNewsletters or Newsletters? -->
              <li><a href="#">Notes</a></li>
        </ul>
      </div><!--/.well sidebar-nav -->
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          
            <li class="nav-header">Actions</li>
              <!-- <li class="active"><a href="#">Export Link</a></li> -->
              <li><a href="#">Email</a></li>
              <li><a href="#">Write Letter</a></li>
        </ul>
      </div><!--/.well sidebar-nav -->
    </div><!--/span3--> 
    <div class="span9">
      <div class="row-fluid">
          <%- model_class = Organization -%>
            <div class="page-header">
              <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
            </div>

            <dl class="dl-horizontal">
              <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
              <dd><%= @organization.name %></dd>
              <dt><strong><%= model_class.human_attribute_name(:mission) %>:</strong></dt>
              <dd><%= @organization.mission %></dd>
              <dt><strong><%= model_class.human_attribute_name(:program) %>:</strong></dt>
              <dd><%= @organization.program %></dd>
              <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
              <dd><%= @organization.website %></dd>
              <dt><strong><%= model_class.human_attribute_name(:street_address) %>:</strong></dt>
              <dd><%= @organization.street_address %></dd>
              <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
              <dd><%= @organization.city %></dd>
              <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
              <dd><%= @organization.state %></dd>
              <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
              <dd><%= @organization.zip %></dd>
              <dt><strong><%= model_class.human_attribute_name(:contact_first_name) %>:</strong></dt>
              <dd><%= @organization.contact_first_name %></dd>
              <dt><strong><%= model_class.human_attribute_name(:contact_last_name) %>:</strong></dt>
              <dd><%= @organization.contact_last_name %></dd>
              <dt><strong><%= model_class.human_attribute_name(:contact_phone_number) %>:</strong></dt>
              <dd><%= @organization.contact_phone_number %></dd>
              <dt><strong><%= model_class.human_attribute_name(:contact_email) %>:</strong></dt>
              <dd><%= @organization.contact_email %></dd>
            </dl>

            <div class="form-actions">
              <%= link_to t('.back', :default => t("helpers.links.back")),
                          organizations_path, :class => 'btn'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_organization_path(@organization), :class => 'btn' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          organization_path(@organization),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
            </div>
      </div><!--/row-fluid-->
    </div><!--/span9-->
  </div><!--/row-fluid-->  
</div><!--/container-fluid-->
