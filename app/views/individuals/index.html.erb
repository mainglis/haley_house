<%- model_class = Individual -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:salutation) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:current_street_address) %></th>
      <th><%= model_class.human_attribute_name(:current_city) %></th>
      <th><%= model_class.human_attribute_name(:current_zip) %></th>
      <th><%= model_class.human_attribute_name(:permanent_street_address) %></th>
      <th><%= model_class.human_attribute_name(:permanent_city) %></th>
      <th><%= model_class.human_attribute_name(:permanent_zip) %></th>
      <th><%= model_class.human_attribute_name(:phone_mobile) %></th>
      <th><%= model_class.human_attribute_name(:phone_work) %></th>
      <th><%= model_class.human_attribute_name(:phone_home) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_name) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_street_address) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_city) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_zip) %></th>
      <th><%= model_class.human_attribute_name(:email_newsletter) %></th>
      <th><%= model_class.human_attribute_name(:mail_newsletter) %></th>
      <th><%= model_class.human_attribute_name(:applied_date) %></th>
      <th><%= model_class.human_attribute_name(:processed_date) %></th>
      <th><%= model_class.human_attribute_name(:inactive_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @individuals.each do |individual| %>
      <tr>
        <td><%= link_to individual.id, individual_path(individual) %></td>
        <td><%= individual.first_name %></td>
        <td><%= individual.last_name %></td>
        <td><%= individual.salutation %></td>
        <td><%= individual.email %></td>
        <td><%= individual.current_street_address %></td>
        <td><%= individual.current_city %></td>
        <td><%= individual.current_zip %></td>
        <td><%= individual.permanent_street_address %></td>
        <td><%= individual.permanent_city %></td>
        <td><%= individual.permanent_zip %></td>
        <td><%= individual.phone_mobile %></td>
        <td><%= individual.phone_work %></td>
        <td><%= individual.phone_home %></td>
        <td><%= individual.emergency_contact_name %></td>
        <td><%= individual.emergency_contact_street_address %></td>
        <td><%= individual.emergency_contact_city %></td>
        <td><%= individual.emergency_contact_zip %></td>
        <td><%= individual.email_newsletter %></td>
        <td><%= individual.mail_newsletter %></td>
        <td><%= individual.applied_date %></td>
        <td><%= individual.processed_date %></td>
        <td><%= individual.inactive_date %></td>
        <td><%=l individual.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_individual_path(individual), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      individual_path(individual),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_individual_path,
            :class => 'btn btn-primary' %>

<h2>Import Individuals</h2>
<%= form_tag import_individuals_path, :multipart => true do%>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<h2>Export Individuals</h2>

<p>
  Download:
  <%= link_to "CSV", individuals_path(:format => "csv") %> |
  <%= link_to "Excel", individuals_path(:format => "xls") %>
</p>

