<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <%= render :partial => 'sidebar' %>
    </div><!--/span3--> 
    <div class="span9">
      <div class="row-fluid">

        <%- model_class = Individual -%>
          <div class="page-header">
            <h3>Basic Information  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_individual_path(@individual), :class => 'btn'%></h3>
          </div>
          <dl class="dl-horizontal">
            <% attributes_order = [ 
                "first_name",
                "last_name",
                "salutation",
                "email",
                "current_street_address",
                "current_city",
                "current_state",
                "current_zip",
                "permanent_street_address",
                "permanent_city",
                "permanent_zip",
                "phone_mobile",
                "phone_work",
                "phone_home",
                "emergency_contact_name",
                "emergency_contact_street_address",
                "emergency_contact_city",
                "emergency_contact_zip",
                "email_newsletter",
                "mail_newsletter",
                "applied_date",
                "processed_date",
                "inactive_date",
              ] %>
            <% attributes_order.each do |attribute| %>
              <dt><strong><%= model_class.human_attribute_name(attribute.to_sym) + ':' %></strong></dt>
              <dd><%= @individual.attributes[attribute] %></dd>
            <% end -%>   
          </dl>

<!-- _____________________________________________________________
  _____________________________________________________________ -->

          <div id="donations"> 
            <h3>Donations <%= link_to 'Add New', new_donation_path, :class => 'btn' %></h3>
          </div>

            <table class="table table-striped">
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Method</th>
                <th>Details</th>
                <th></th>
                <th></th>
              </tr>

            <% @individual.donations.each do |donation| %>
              <tr>
                <td><%= donation.date_string %></td>
                <td><%= number_to_currency donation.amount %></td>
                <td><%= donation.method %></td>
                <td><%= link_to 'View Details', donation, :class => 'button' %></td>
                <td><%= link_to 'Add New', new_donation_path, :class => 'btn btn-mini' %></td>
              </tr>
            <% end %>
            </table>
<!-- _____________________________________________________________
  _____________________________________________________________ -->

          <div id="roles" class="page-header">
            <h3>Roles <%= link_to "Edit", new_individual_role_record_path, :class => 'btn' %></h3>
          </div>
          <% @individual.individual_role_records.each do |individual_role_record| %>
            <%= individual_role_record %><br/>
          <% end -%>
          <%= link_to "Create New Role Record", new_individual_role_record_path %>

<!-- _____________________________________________________________
  _____________________________________________________________ -->

          <div id="notes" class="page-header">
            <h3>Notes <%= link_to "Add New", new_note_path, :class => 'btn' %></h3>
          </div>
          <% @individual.notes.each do |notes| %>
            <%= notes %><br/>
          <% end -%>
<!-- _____________________________________________________________
  _____________________________________________________________ -->                  

          <div class="form-actions">
            <%= link_to t('.back', :default => t("helpers.links.back")),
                        individuals_path, :class => 'btn'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_individual_path(@individual), :class => 'btn' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        individual_path(@individual),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>


                   
</div><!--/container-fluid-->