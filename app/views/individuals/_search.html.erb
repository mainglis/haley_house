<%= form_for @search, :url => individuals_path, :html => {:method => :get} do |f| %>
  <h4>Search</h4>
  <%= f.label :first_name_or_last_name_contains, "Name" %>
  <%= f.text_field :first_name_or_last_name_contains %><br />
  <%= f.label :email_contains, "Email" %>
  <%= f.text_field :email_contains %><br />
  <%= f.label :current_street_address_contains, "Current Street Address" %>
  <%= f.text_field :current_street_address_contains %><br />
  <%= f.label :email_newsletter_is_true, "Receiving Email Newsletter" %>
  <%= f.check_box :email_newsletter_is_true %><br />
  <%= f.label :mail_newsletter_is_true, "Receiving Mail Newsletter" %>
  <%= f.check_box :mail_newsletter_is_true %><br />
  <%= f.label :individual_role_records_role_name_contains, "Role" %>
  <%= f.check_box :individual_role_records_role_name_contains %><br />
  <%#= f.label :comments_created_at_greater_than, 'With comments after' %>
  <%#= f.datetime_select :comments_created_at_greater_than, :include_blank => true %><br />
  <!-- etc... -->
  <%= f.submit "Search", :class => "btn" %>
<% end %>