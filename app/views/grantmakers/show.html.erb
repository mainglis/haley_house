<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
            <!-- <li class="nav-header">Navigate</li> -->
              <!-- <li class="active"><a href="#">Export Link</a></li> -->
              <li><%= link_to t('.back', :default => t("helpers.links.back_to_search")),
                      grantmakers_path, :class => 'btn'  %></li>
        </ul>
      </div><!--/.well sidebar-nav -->
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
    
            <li class="nav-header">View or Edit</li>
              <!-- <li class="active"><a href="#">Export Link</a></li> -->
              <li><a href="#">Contact Information</a></li>
              <li><a href="#">Grant History</a></li>
              <li><a href="#">Deadlines</a></li>
              <li><a href="#">Similar Organizations Funded</a></li>
              <li><a href="#">Notes</a></li>
        </ul>
      </div><!--/.well sidebar-nav -->
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          
            <li class="nav-header">Actions</li>
              <!-- <li class="active"><a href="#">Export Link</a></li> -->
              <li><a href="#">Download as PDF</a></li>
              <li><a href="#">Print</a></li>
        </ul>
      </div><!--/.well sidebar-nav -->
    </div><!--/span3--> 
    <div class="span9">
      <div class="row-fluid">
        <%- model_class = Grantmaker -%>

        <div class="page-header">
          <h2>View Grantmaker</h2>
        </div>
        <dl class="dl-horizontal">
          <% attributes_order = [
            "name",
            "rank",
            "years_funded",
            "unsolicited_proposals",
            "mission",
            "website",
            "street_address",
            "city",
            "state",
            "zip_code",
            "phone",
            "email",
            "contact_first_name",
            "contact_last_name",
            "contact_email",
            "contact_phone_number",
            "notes",
          ] %>
            <% attributes_order.each do |attribute| %>
              <% next if @grantmaker.attributes[attribute].blank? %>
              <dt><strong><%= model_class.human_attribute_name(attribute.to_sym) + ':' %></strong></dt>
              <dd><%= @grantmaker.attributes[attribute] %></dd>
            <% end -%>   
            <dt><strong><%= model_class.human_attribute_name(:years_funded) %>:</strong></dt>
            <dd><%= @years_funded %></dd>
          </dl>


        <div class="row-fluid">
          <%= link_to t('.back', :default => t("helpers.links.back")),
                      grantmakers_path, :class => 'btn'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_grantmaker_path(@grantmaker), :class => 'btn' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      grantmaker_path(@grantmaker),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
        </div>

      </div><!--/row-fluid-->
    </div><!--/span9-->
  </div><!--/row-fluid-->  
</div><!--/container-fluid-->
